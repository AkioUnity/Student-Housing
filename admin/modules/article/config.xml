<?xml version="1.0" encoding="UTF-8"?>
<module title="[ARTICLES]" name="article" multi="1" library="0" dashboard="1" icon="thumbtack" ranking="1" home="1" main="0" validation="1" dates="1" release="1" index="1.3">
	<!-- resizing
	[0] 1 single image
	[1] 1x big, 1x medium, 1x small -->
	<medias max="30" resizing="1">
		<big maxw="1024" maxh="768"/>
		<medium maxw="600" maxh="600"/>
		<small maxw="400" maxh="400"/>
	</medias>
	<list order="rank">
		<filter label="[PAGE]" name="id_page">
            <options table="pm_page" fieldlabel="name" fieldvalue="id" order="name"/>
        </filter>
		<col label="[TITLE]" name="title" type="none"/>
		<col label="[PAGE]" name="id_page" table="pm_page" fieldvalue="name" fieldref="id"/>
	</list>
	<form>
		<field multi="1" label="[TITLE]" name="title" type="text" required="1" unique="0" validation="none"/>
		<field multi="1" label="[SUBTITLE]" name="subtitle" type="text" required="0" unique="0" validation="none"/>
		<field multi="1" label="[ALIAS]" name="alias" type="alias" required="1" unique="1" validation="none" comment="[ARTICLE_ALIAS_NOTICE]"/>
		<field multi="1" label="[MAIN_TEXT]" name="text" type="textarea" editor="1" required="0" unique="0" validation="none"/>
		<field multi="1" label="[URL]" name="url" type="text" required="0" unique="0" validation="none"/>
		<field multi="0" label="[PAGE]" name="id_page" type="select" required="1" unique="0" validation="none">
			<options table="pm_page" fieldlabel="name" fieldvalue="id" order="name"/>
		</field>
		<field multi="0" label="[SHOW_IN_LANGS]" name="show_langs" type="multiselect" required="0" unique="0" validation="none">
			<options table="pm_lang" fieldlabel="title" fieldvalue="id" order="title"/>
		</field>
		<field multi="0" label="[HIDE_IN_LANGS]" name="hide_langs" type="multiselect" required="0" unique="0" validation="none">
			<options table="pm_lang" fieldlabel="title" fieldvalue="id" order="title"/>
		</field>
		<field multi="0" label="[TAGS]" name="tags" type="multiselect" required="0" unique="0" validation="none">
			<options table="pm_tag" fieldlabel="value" fieldvalue="id" order="value"/>
		</field>
		<field multi="0" label="[ALLOW_COMMENTS]" name="comment" type="radio" required="1" unique="0" validation="none" roles="administrator">
			<options>
				<option value="1">[YES_OPTION]</option>
				<option value="0">[NO_OPTION]</option>
			</options>
		</field>
	</form>
    <roles>
        <user type="administrator" permissions="all"/>
        <user type="manager" permissions="all"/>
        <user type="editor" permissions="add,edit,upload"/>
    </roles>
</module>
